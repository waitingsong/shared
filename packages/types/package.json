{
  "name": "@waiting/shared-types",
  "author": "waiting",
  "version": "7.0.0",
  "description": "shared typescript types",
  "keywords": [
    "types",
    "typescript",
    "ts"
  ],
  "bin": {},
  "browser": "",
  "es2015": "",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "bugs": {
    "url": "https://github.com/waitingsong/shared-types/issues"
  },
  "homepage": "https://waitingsong.github.io/shared-types#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitingsong/shared-types.git"
  },
  "license": "MIT",
  "devDependencies": {
    "cross-env": "7"
  },
  "peerDependencies": {
    "typescript": ">=4.1.0"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "files": [
    "src/**/*.ts",
    "dist"
  ],
  "scripts": {
    "build": "npm run tsc && npm run rp",
    "clean": "rm -rf dist/* .vscode/.tsbuildinfo .vscode/.tsbuildinfo.* ",
    "cov": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc mocha",
    "lint": "eslint --fix --cache {src,test}/**/*.ts",
    "lint:nofix": "eslint --cache {src,test}/**/*.ts",
    "rp": "rollup -c rollup.config.js",
    "rp:w": "npm run tsc:w | rollup -wc rollup.config.js",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json mocha",
    "test:browser": "cd .config && npm run browser && cd ..",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      ".githooks",
      "dist",
      "node_modules*",
      "src/bin",
      "src/domain.ts",
      "src/interface.ts",
      "test*",
      "**/node_modules*",
      "**/*.d.ts",
      "**/*.js"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "all": true
  }
}
